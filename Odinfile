# Build variable-expression library.

libvarexp.a == %libvarexp.a.sm +cc='gcc -Wall -ansi -pedantic' \
                               +debug \
                               :a

%libvarexp.a.sm == <<
    expand-named-characters.c
    expand-character-class.c
    parser.c
    expression.c
    variable.c
    expand.c
    tokenbuf.c
    search-and-replace.c

%clean ! == !<<
    rm -f libvarexp.a
