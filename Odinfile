# Build variable-expression library.

libvarexp.a == %libvarexp.a.sm +gnu \
                               +cxx_flags='-pedantic -Wall -Wshadow -Wpointer-arith -Wcast-align -Winline -Wmissing-prototypes -Wmissing-declarations -Wnested-externs -Wno-long-long' \
                               +optimize=3 \
                               +debug \
                               :a

%libvarexp.a.sm == <<
    command.cc
    cut-out-offset.cc
    expand-character-class.cc
    unescape.cc
    expand.cc
    expression.cc
    input.cc
    loop.cc
    num-exp.cc
    padding.cc
    search-and-replace.cc
    text.cc
    transpose.cc
    variable.cc
    error.cc
    parser.cc

%clean ! == !<<
    rm -f libvarexp.a
