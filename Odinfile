# Build variable-expression library.

libvarexp.a == %libvarexp.a.sm +gnu \
                               +cxx_flags='-Wall -pedantic' \
                               +debug \
                               :a

%libvarexp.a.sm == <<
    command.cc
    cut-out-offset.cc
    expand-character-class.cc
    unescape.cc
    expand.cc
    expression.cc
    input.cc
    loop.cc
    num-exp.cc
    padding.cc
    search-and-replace.cc
    strerror.cc
    text.cc
    tokenbuf.cc
    transpose.cc
    variable.cc

%clean ! == !<<
    rm -f libvarexp.a
